<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6">Create an Account</h1>
    
    <%= form_with(model: @user, url: register_path, local: true) do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :name, class: "w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", required: true %>
      </div>
      
      <div class="mb-4">
        <%= f.label :username, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :username, class: "w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", required: true %>
        <p class="text-gray-500 text-sm mt-1">Only letters, numbers, and underscores.</p>
      </div>
      
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, class: "w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", required: true %>
      </div>
      
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password, class: "w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", required: true, minlength: 6 %>
      </div>
      
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, class: "w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", required: true, minlength: 6 %>
      </div>
      
      <div class="mb-6">
        <%= f.label :bio, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_area :bio, class: "w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", rows: 3 %>
        <p class="text-gray-500 text-sm mt-1">Maximum 160 characters.</p>
      </div>
      
      <div class="mb-4">
        <%= f.submit "Create Account", class: "w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded font-medium" %>
      </div>
    <% end %>
    
    <div class="text-center mt-4">
      <p class="text-gray-600">Already have an account? <a href="<%= login_path %>" class="text-blue-600 hover:underline">Login</a></p>
    </div>
  </div>
</div>
