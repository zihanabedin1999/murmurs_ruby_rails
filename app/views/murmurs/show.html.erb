<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b">
      <a href="javascript:history.back()" class="text-gray-600 hover:text-gray-900">
        <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      </a>
    </div>
    
    <div class="p-6">
      <div class="flex items-start">
        <a href="<%= user_path(@murmur.user) %>" class="mr-4">
          <img src="<%= @murmur.user.avatar_url %>" alt="<%= @murmur.user.name %>" class="w-12 h-12 rounded-full object-cover">
        </a>
        
        <div class="flex-1">
          <div class="flex items-center">
            <a href="<%= user_path(@murmur.user) %>" class="font-bold hover:underline"><%= @murmur.user.name %></a>
            <span class="text-gray-500 ml-2">@<%= @murmur.user.username %></span>
          </div>
          
          <div class="mt-4">
            <p class="text-lg"><%= @murmur.content %></p>
          </div>
          
          <div class="mt-4 text-gray-500">
            <p><%= @murmur.created_at.strftime("%I:%M %p Â· %b %d, %Y") %></p>
          </div>
          
          <div class="mt-6 pt-4 border-t flex items-center">
            <div data-controller="like" class="flex items-center mr-6">
              <% if @murmur.liked_by?(current_user) %>
                <button 
                  data-like-target="button" 
                  data-murmur-id="<%= @murmur.id %>"
                  data-action="click->like#unlike"
                  class="text-red-500 hover:text-red-600"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                  </svg>
                </button>
              <% else %>
                <button 
                  data-like-target="button" 
                  data-murmur-id="<%= @murmur.id %>"
                  data-action="click->like#like"
                  class="text-gray-500 hover:text-red-600"
                >
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </button>
              <% end %>
              <span data-like-target="count" class="ml-2 font-medium"><%= @murmur.like_count %></span>
            </div>
            
            <% if @murmur.user.id == current_user.id %>
              <%= button_to murmur_path(@murmur), method: :delete, class: "text-gray-500 hover:text-red-600", form: { data: { turbo_confirm: "Are you sure you want to delete this murmur?" } } do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
