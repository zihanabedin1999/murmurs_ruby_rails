<header class="bg-white shadow">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="<%= root_path %>" class="font-bold text-2xl text-blue-600">Murmur</a>
      
      <nav>
        <ul class="flex items-center space-x-6">
          <% if logged_in? %>
            <li>
              <a href="<%= root_path %>" class="text-gray-700 hover:text-blue-600">Home</a>
            </li>
            <li>
              <a href="<%= user_path(current_user) %>" class="text-gray-700 hover:text-blue-600">Profile</a>
            </li>
            <li>
              <div class="relative group">
                <button class="flex items-center text-gray-700 hover:text-blue-600">
                  <img src="<%= current_user.avatar_url %>" alt="<%= current_user.name %>" class="w-8 h-8 rounded-full object-cover mr-2">
                  <span><%= current_user.name %></span>
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                
                <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 hidden group-hover:block z-10">
                  <%= button_to "Logout", logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100" %>
                </div>
              </div>
            </li>
          <% else %>
            <li>
              <a href="<%= login_path %>" class="text-gray-700 hover:text-blue-600">Login</a>
            </li>
            <li>
              <a href="<%= register_path %>" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Register</a>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
